    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Core Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}/src/bootster.web"
            }
        },
        {
            "name": "Launch debug web in docker",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "netCore": {
                "appProject": "${workspaceFolder}/src/booster.web/Booster.Web.csproj",
                "enableDebugging": true
            }
        }
    ]
}